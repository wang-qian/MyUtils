<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/rl_notice_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@android:color/white"
                tools:context=".NoticeActivity">

    <TextView
        android:id="@+id/tv_notice_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:textColor="#344b5f"
        android:textSize="17sp"
        tools:text="赵日天申请入群是否同意"
        android:text="同意"
        />
    <View
        android:layout_below="@id/tv_notice_title"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#E1E9F0"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_notice_title">

        <TextView
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center"
            android:clickable="true"
            android:paddingBottom="20.5dp"
            android:paddingTop="21dp"
            android:textColor="#344b5f"
            android:textSize="17sp"
            android:text="取消"
            />
        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="#E1E9F0"/>
        <TextView
            android:id="@+id/btn_confirm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center"
            android:paddingBottom="21dp"
            android:paddingTop="20.5dp"
            android:textColor="#007CC2"
            android:textSize="17sp"
            android:text="确认"
            android:clickable="true"
            />
    </LinearLayout>
</RelativeLayout>